{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
  }
}